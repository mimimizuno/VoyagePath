<% provide(:title, 'Profile edit') %>
<h1 class="text-center page-title">プロフィールの編集</h1>

<div class="row justify-content-center align-items-center">
  <div class="col-md-6">
    <%= form_with(model: @user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :user_name, "ユーザー名", class: "form-label" %>
      <%= f.text_field :user_name, class: 'form-control' %>

      <%= f.label :goal, "目標", class: "form-label" %>
      <%= f.text_field :goal, class: 'form-control' %>

      <%= f.label :goal_due_date, "期限日", class: "form-label" %>
      <%= f.date_field :goal_due_date, class: 'form-control' %>

      <%= f.submit "プロフィールの更新", class: "btn btn-main w-100" %>
    <% end %>
  </div>
</div>