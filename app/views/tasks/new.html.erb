<% provide(:title, 'create new todo') %>
<h1>New Task for <%= @user.user_name %></h1>

<%= form_with(model: [@user, @task]) do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :due_date %>
    <%= f.date_select :due_date %>
  </div>

  <div>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  </div>

  <div>
    <%= f.submit 'Create Task' %>
  </div>
<% end %>

<%= link_to 'Back', user_tasks_path(@user) %>