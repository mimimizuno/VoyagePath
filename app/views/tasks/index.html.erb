<% provide(:title, 'to do') %>
<h1>Tasks for <%= @user.user_name %></h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Due Date</th>
      <th>Completed</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.due_date %></td>
        <td><%= task.completed %></td>
        <td><%= link_to 'Edit', edit_user_task_path(@user, task) %></td>
        <td><%= link_to 'Delete', user_task_path(@user, task), data: { "turbo-method": :delete,
                                                               turbo_confirm: "You sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Task', new_user_task_path(@user) %>