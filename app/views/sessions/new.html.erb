<% provide(:title, "Log in") %>
<h1 class="text-center">ログイン</h1>

<div class="row justify-content-center align-items-center">
  <div class="col-md-6">
    <%= form_with(url: login_path, scope: :session) do |f| %>

      <%= f.label :email, "メールアドレス", class: "form-label" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, "パスワード", class: "form-label"%>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>ログイン情報を記録する</span>
      <% end %>

      <%= f.submit "ログイン", class: "btn btn-main w-100" %>
    <% end %>

    <p class="text-center">まだ登録していませんか？ <%= link_to "新規登録", signup_path, class: "accent-color" %></p>
  </div>
</div>